{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build E-Cell MET Next.js",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"problemMatcher": [
				"$tsc"
			],
			"isBackground": false,
			"detail": "Build the Next.js application for production"
		},
		{
			"label": "Start Development Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": {
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "Local:.*"
				}
			},
			"detail": "Start the Next.js development server on http://localhost:3000"
		},
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "npm",
			"args": [
				"install"
			],
			"group": "build",
			"problemMatcher": [],
			"detail": "Install all npm dependencies"
		},
		{
			"label": "Lint Code",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"lint"
			],
			"group": "test",
			"problemMatcher": [
				"$eslint-stylish"
			],
			"detail": "Run ESLint to check for code issues"
		}
	]
}